{
  "//": "AI 工具 tmux 会话管理 - 需要安装 tmux-ai-cli",
  "//": "安装: cd ../tmux-ai-cli && ./install.sh",

  // 终端 Tabs 启用
  "terminal.integrated.tabs.enabled": true,

  // Tab 标题跟随终端发送的 title 序列（tmux 会发送）
  "terminal.integrated.tabs.title": "${sequence}",

  // 默认图标/颜色（fallback）
  "terminal.integrated.tabs.defaultIcon": "terminal-tmux",
  "terminal.integrated.tabs.defaultColor": "terminal.ansiBlue",

  // AI 工具 terminal profiles（使用全局 ai 命令）
